@model PagedList.IPagedList<ProjectVehicle.MVC.Models.VehicleModelViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Models";
}

<h2>These are all models by this manufacturer</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "VehicleModel", FormMethod.Get))
{
<p>
    <b>Find model: </b>@Html.TextBox("SearchVehicle", ViewBag.CurrentFilter as string)    
    <input type="submit" value="Search" />
</p>
}

<table class="table">
    <tr>
        <th>
            <text>Manufacturer name</text>
        </th>
        <th>
            @Html.ActionLink("Model name", "Index", new { sortVehicle = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>            
            @Html.ActionLink("Year", "Index", new { sortVehicle = ViewBag.YearSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>

        <th>
            Colour
        </th>

        <th>
            Actions
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMake.ManufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VehicleModelID }) |
                @Html.ActionLink("Details", "Details", new { id = item.VehicleModelID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VehicleModelID })
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, pageVehicle => Url.Action("Index",
    new { pageVehicle,         
        makeId = Request.QueryString["makeId"],
        sortVehicle = ViewBag.CurrentSort, 
        currentFilter = ViewBag.CurrentFilter 
    }))
